{
    "extends": "@react-native/typescript-config/tsconfig.json",
    "compilerOptions": {
        "lib": ["es2015", "dom"],
        "jsx": "react-native",
        "esModuleInterop": true,
        "types": [
            "@types/react-native-dotenv"
        ],
        "typeRoots": [
            "./node_modules/@types",
            "./types"
        ]
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "babel.config.js",
        "metro.config.js",
        "jest.config.js"
    ]
}